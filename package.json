{
  "name": "clean-ts-api",
  "version": "2.4.2",
  "description": "API do Curso do Rodrigo Manguinho",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests --coverage=false --silent --noStackTrace --runInBand",
    "test:verbose": "npx jest --verbose",
    "test:unit": "npm run test -- --watch -c jest-unit-config.js",
    "test:integration": "npm run test -- --watch -c jest-integration-config.js",
    "test:staged": "npm run test -- --passWithNoTests --findRelatedTests",
    "test:ci": "npm run test -- --coverage=true",
    "test:coveralls": "npm run test:ci && npx coveralls < ./coverage/lcov.info",
    "prepare": "husky install",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "start:prd": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down"
  },
  "keywords": [],
  "author": "joao.pedroasz00@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.2.0",
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.11.27",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mockdate": "^3.0.5",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.5.0",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@main": "dist/main",
    "@factories": "dist/main/factories"
  }
}
